<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.web.WebView?>
<GridPane fx:controller="sample.Controller" fx:id="gridPane"
          xmlns:fx="http://javafx.com/fxml" alignment="center"
          hgap="10" vgap="10"
          stylesheets="@css/style.css">

    <Button text="Open" fx:id="Open"
            GridPane.rowIndex="0" GridPane.columnIndex="0"
            onAction="#handleClick"/>
    <Button text="button2"
            GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Button text="button3"
            GridPane.rowIndex="0" GridPane.columnIndex="2"/>
    <Button text="button4"
            GridPane.rowIndex="0" GridPane.columnIndex="3"/>

    <Label fx:id="label" text="This is a label"
           GridPane.rowIndex="1" GridPane.columnIndex="0"
            onMouseEntered="#handleLabelMouseEntry" onMouseExited="#handleLabelMouseExit"/>

    <Hyperlink  text="www.javafx.com" onAction="#handleLinkClick"
                GridPane.rowIndex="2" GridPane.columnIndex="0"/>

    <WebView fx:id="webView"
                GridPane.rowIndex="3" GridPane.columnIndex="0"
                GridPane.columnSpan="3" GridPane.rowSpan="3"/>


</GridPane>